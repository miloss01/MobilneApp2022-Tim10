            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/textview_ridedetails_starttime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:text="18/07/2022 10:43"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textview_ridedetails_price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="+500.2 din"
                android:textAlignment="textEnd"
                android:textColor="@color/teal_200"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/textview_ridedetails_startaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:text="START: Ulica U. Ulica 189, Novi Sad"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/textview_ridedetails_adr1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="→ Ulica U. Ulica 189, Novi Sad"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/textview_ridedetails_adr2"
