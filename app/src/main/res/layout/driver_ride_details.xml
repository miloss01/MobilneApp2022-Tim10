                android:layout_weight="1"
                android:text="→ Ulica U. Ulica 189, Novi Sad"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/textview_ridedetails_endaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:text="END: Ulica B. Gradska 12A, Novi Sad"
                android:textSize="18sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/textview_ridedetails_endtime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="18/07/2022 10:59"
                android:textStyle="bold"
                android:layout_weight="9" />

