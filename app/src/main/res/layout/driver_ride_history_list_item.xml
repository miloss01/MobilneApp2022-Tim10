<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FBFBFB"
        android:paddingHorizontal="20sp"
        android:paddingVertical="15sp">

        <LinearLayout
            android:id="@+id/driver_ride_history_leftside"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/driver_ride_history_departure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="12sp"></TextView>

            <TextView
                android:id="@+id/driver_ride_history_startTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#6A6767"
                android:textSize="9sp"></TextView>

            <TextView
                android:id="@+id/driver_ride_history_destination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/driver_ride_history_departure"
                android:layout_marginTop="5sp"
                android:textColor="@color/black"
                android:textSize="12sp"></TextView>

            <TextView
                android:id="@+id/driver_ride_history_endTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#6A6767"
                android:textSize="9sp"></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/driver_ride_history_leftside"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/driver_ride_history_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/teal_200"></TextView>

            <TextView
                android:id="@+id/driver_ride_history_kilometers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2sp"
                android:textColor="@color/black"></TextView>

            <TextView
                android:id="@+id/driver_ride_history_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2sp"
                android:textColor="@color/black"></TextView>

        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>