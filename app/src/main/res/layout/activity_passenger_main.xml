<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/passenger_main_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/black"
            app:theme="@style/ToolbarColored"
            app:titleTextColor="@color/white">
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:id="@+id/passenger_map_container"
            android:layout_width="match_parent"
            android:layout_height="330dp"
            android:orientation="vertical" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--                <LinearLayout-->
            <!--                    android:id="@+id/passenger_map_container"-->
            <!--                    android:layout_width="match_parent"-->
            <!--                    android:layout_height="400dp"-->
            <!--                    android:orientation="vertical" />-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:background="@color/white">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="start"
                    android:layout_marginTop="200dp"
                    android:src="@drawable/ic_play_circle" />

                <EditText
                    android:id="@+id/pass_departure"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="10dp"
                    android:hint="@string/beginning_location" />

                <Button
                    android:id="@+id/add_departure_to_favoutites_btn"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="45dp"
                    android:background="@drawable/ic_heart" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:background="@color/white">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="start"
                    android:layout_marginTop="200dp"
                    android:src="@drawable/ic_pin_drop" />

                <EditText
                    android:id="@+id/pass_destination"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="10dp"
                    android:hint="@string/destination" />

                <Button
                    android:id="@+id/add_destination_to_fav_btn"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="45dp"
                    android:background="@drawable/ic_heart" />


            </LinearLayout>

            <Button
                android:id="@+id/pass_main_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:layout_marginTop="20dp"
                android:text="@string/show_path" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estimated time"
                android:layout_marginStart="45dp"

                android:id="@+id/estimated_time"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:layout_marginStart="45dp"

                android:id="@+id/estimated_price"/>

            <Button
                android:id="@+id/open_ride_creation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:layout_marginTop="20dp"
                android:text="@string/make_reservation" />

            <TextView
                android:id="@+id/headerForTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/fillerForTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </LinearLayout>

    </ScrollView>


</LinearLayout>
