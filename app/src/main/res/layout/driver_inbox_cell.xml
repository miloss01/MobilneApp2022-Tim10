<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_messagecell_senderphoto"
        android:layout_width="156dp"
        android:layout_height="57dp"
        android:layout_marginStart="-30dp"
        android:src="@drawable/profilephoto1" />

    <TextView
        android:id="@+id/textview_messagecell_sendername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginStart="100dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Sally Driver"
        />


    <TextView
        android:id="@+id/textview_messagecell_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="100dp"
        android:text="18/12/2022 14:30"
        android:textSize="15sp" />


</RelativeLayout>