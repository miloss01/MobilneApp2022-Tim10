<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <TextView
            android:id="@+id/login_title"
            android:layout_width="match_parent"
            android:layout_height="231dp"
            android:gravity="bottom|center"
            android:text="UBER"
            android:textColor="@color/black"
            android:textSize="55sp" />

        <TextView
            android:id="@+id/login_subtitle"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_below="@id/login_title"
            android:gravity="center"
            android:text="PROCEED WITH YOUR ACCOUNT"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/login_title2"
            android:layout_width="match_parent"
            android:layout_height="141dp"
            android:layout_below="@id/login_subtitle"
            android:gravity="center"
            android:text="Log in"
            android:textColor="@color/black"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/login_label_email"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_title2"
            android:layout_marginLeft="30sp"
            android:gravity="center|left"
            android:text="Email"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/login_edit_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_label_email"
            android:layout_marginLeft="26sp"
            android:layout_marginRight="26sp"
            android:backgroundTint="@color/black"
            android:ems="10"
            android:hint="email"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:textColorHint="#959191" />

        <TextView
            android:id="@+id/login_label_password"
            android:layout_width="377dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_edit_email"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="30sp"
            android:gravity="center|left"
            android:text="Password"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/login_edit_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_label_password"
            android:layout_marginLeft="26sp"
            android:layout_marginRight="26sp"
            android:backgroundTint="@color/black"
            android:ems="10"
            android:hint="password"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="#959191" />

        <Button
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_edit_password"
            android:layout_marginLeft="26sp"
            android:layout_marginTop="35sp"
            android:layout_marginRight="26sp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:text="Log in" />

        <Button
            android:id="@+id/login_reg_button"
            android:layout_width="match_parent"
            android:layout_below="@id/login_button"
            android:background="@color/white"
            android:textColor="@color/black"
            android:layout_marginLeft="26sp"
            android:layout_marginTop="15sp"
            android:textSize="10sp"
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginRight="26sp"
            android:layout_height="wrap_content"
            android:text="Don't have an account? Register now." />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>